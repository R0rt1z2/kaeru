menu "Library Options"

menu "Framebuffer Support"
	config FRAMEBUFFER_SUPPORT
		bool "Enable framebuffer library support"
		default n
		help
		  Enable the framebuffer library for drawing graphics and text.
		  This adds support for basic shapes, text rendering, and UI elements.

		  Say Y unless you want to minimize binary size and don't need graphics.

	if FRAMEBUFFER_SUPPORT

	menu "Hardware Configuration"
		config FRAMEBUFFER_ADDRESS
			hex "Framebuffer base address"
			default 0x7F528000
			help
			  Base address of the framebuffer in memory.
			  This should be a valid memory address where the display
			  controller expects to find the pixel data.

		config FRAMEBUFFER_ALIGNMENT
			int "Framebuffer row alignment (bytes)"
			default 32
			help
			  Row alignment requirement for framebuffer.
			  Common values: 32, 64, 128, 256
			  64 bytes works for most MediaTek devices.
	endmenu

	menu "Display Properties"
		config FRAMEBUFFER_WIDTH
			int "Screen width in pixels"
			default 800
			help
			  Width of the display in pixels.

		config FRAMEBUFFER_HEIGHT
			int "Screen height in pixels"
			default 1280
			help
			  Height of the display in pixels.

		config FRAMEBUFFER_BPP
			int "Bits per pixel"
			default 32
			range 16 32
			help
			  Number of bits per pixel. Common values:
			  16 - RGB565 format
			  24 - RGB888 format
			  32 - ARGB8888 format (recommended)

		config FRAMEBUFFER_BYTES_PER_PIXEL
			int
			default 2 if FRAMEBUFFER_BPP = 16
			default 3 if FRAMEBUFFER_BPP = 24
			default 4 if FRAMEBUFFER_BPP = 32
			help
			  Calculated bytes per pixel based on BPP setting.
			  This is used internally for buffer calculations.
	endmenu

	choice
		prompt "Font selection"
		default FONT_8X8_BASIC
		help
		  Select the font to use for text rendering.

	config FONT_8X8_BASIC
		bool "8x8 Basic Font (IBM PC Compatible)"
		help
		  Standard 8x8 pixel font with full ASCII support.
		  Compatible with IBM PC character set.
		  Size: ~1KB

	config FONT_8X8_CALSTONE
		bool "8x8 Calstone Font"
		help
		  Stylized 8x8 pixel font with better visual appeal.
		  Good for retro/gaming aesthetic.
		  Size: ~1KB

	config FONT_8X8_COMIC_FANS
		bool "8x8 Comic Fans Font"
		help
		  Comic-style 8x8 pixel font with playful appearance.
		  Good for casual/fun interfaces.
		  Size: ~1KB

	endchoice

	endif
endmenu

endmenu

menu "Thread Support"
    config THREAD_SUPPORT
        bool "Create your own threads"
        default n
        help
          Say Y if you want to create your own threads

    config THREAD_CREATE_ADDRESS
        hex "Thread create address"
        depends on THREAD_SUPPORT
        help
          Address for thread creation function

    config THREAD_RESUME_ADDRESS
        hex "Thread resume address"
        depends on THREAD_SUPPORT
        help
          Address for thread resume function
endmenu

menu "Fastboot Support"
    menu "Fastboot Function Addresses"
        config FASTBOOT_FAIL_ADDRESS
            hex "Fastboot fail address"
            help
              Address of the fastboot_fail() function in the bootloader

        config FASTBOOT_INFO_ADDRESS
            hex "Fastboot info address"
            help
              Address of the fastboot_info() function in the bootloader

        config FASTBOOT_OKAY_ADDRESS
            hex "Fastboot okay address"
            help
              Address of the fastboot_okay() function in the bootloader

        config FASTBOOT_PUBLISH_ADDRESS
            hex "Fastboot publish address"
            help
              Address of the fastboot_publish() function in the bootloader

        config FASTBOOT_REGISTER_ADDRESS
            hex "Fastboot register address"
            help
              Address of the fastboot_register() function in the bootloader

        config USE_FASTBOOT_ACK
            bool "Use unified fastboot_ack() function"
            default n
            help
              Enable this for devices that use a single fastboot_ack()
              function instead of separate fastboot_okay(), fastboot_fail(),
              and fastboot_info() functions. The unified function takes two
              parameters: fastboot_ack(const char* type, const char* reason)
              where type is "OKAY", "FAIL", or "INFO".

        config FASTBOOT_ACK_ADDRESS
            hex "Fastboot ack address"
            depends on USE_FASTBOOT_ACK
            help
              Address of the fastboot_ack() function in the bootloader.
              Only needed when USE_FASTBOOT_ACK is enabled.
    endmenu
endmenu

menu "Memory and Address Mapping"
    menu "Bootloader Configuration"
        config BOOTLOADER_BASE
            hex "LK load address"
            help
              Base address where the LK bootloader is loaded in memory

        config BOOTLOADER_SIZE
            hex "LK size"
            help
              Size of the LK bootloader in memory

        config BOOTMODE_ADDRESS
            hex "Bootmode address"
            help
              Address where boot mode information is stored
    endmenu

    menu "Platform Function Addresses"
        config PLATFORM_INIT_CALLER
            hex "platform_init()'s caller address"
            help
              Address of the function that calls platform_init()

        config PLATFORM_INIT_ADDRESS
            hex "platform_init() address"
            help
              Address of the platform_init() function

        config APP_CALLER
            hex "app()'s caller address"
            help
              Address of the function that calls app()

        config APP_ADDRESS
            hex "app() address"
            help
              Address of the app() function

        config MTK_DETECT_KEY_ADDRESS
            hex "mtk_detect_key() address"
            help
              Address of the mtk_detect_key() function for key detection

        config VIDEO_PRINTF_ADDRESS
            hex "video_printf() address"
            help
              Address of the video_printf() function for display output
    endmenu
endmenu

menu "Logging Options"
    config LK_LOG_STORE
        bool "Enable LK Log Store"
        default y
        help
          Say Y to enable additional log storage mechanism.
          This allows accessing bootloader logs from the running system.

    config LK_LOG_STORE_ADDRESS
        hex "LK Log Store Address"
        depends on LK_LOG_STORE
        help
          Address of the lk_log_store() function in the bootloader
endmenu

menu "Third party libraries"
    config LIBSEJ_SUPPORT
        bool "Enable libsej support"
        default n
        help
          Say Y to enable libsej support, allowing to interact with
          the device crypto engine.
endmenu
